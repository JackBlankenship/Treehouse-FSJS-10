extends layout

block content
	case type
		when "Update"
			h1 Book: #{title}
			include ./partials/_errors.pug
			form(action="/Books/" + book.id,  method="post")
				include ./partials/_book.pug
		when "Display"
			h1#table #{title}
			include ./partials/_createnew.pug
			include ./partials/_filter.pug
			table
				include ./partials/_thead.pug
				include ./partials/_books.pug
		when "Create New Book"
			h1 #{title}
			include ./partials/_errors.pug
			form(action="/Books/", method="post")
				include ./partials/_book.pug
		default
			h1 Book: #{title}
			form(action="/Books/", method="post")
				include ./partials/_book.pug

	if type == "Update"
		include ./partials/_loanHistory.pug


