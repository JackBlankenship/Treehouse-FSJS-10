extends layout

block content
	h1 Patron: #{title}
	include ./partials/_errors.pug
	p
		strong Book Title: 
			=book.title 
	p
		strong Loaned By: 
			= patron.first_name + ' ' + patron.last_name 
	p
		strong Loaned On: 
			=loan.loaned_on
	p
		strong Return By: 
			=loan.return_by 
	form(action="/Loans/" + loan.id + "?_method=PUT", method="post")
		p
			label(for='returned_on') Returned on:  
				input(type='text', name='returned_on' id='returned_on' class='returned_on' value= returnDate )
		p
			input(type="submit" value= type)

	script(src='http://code.jquery.com/jquery-3.1.1.min.js')
	script(src='https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js')
	script(src='/static/javascripts/validateReturnDate.js')